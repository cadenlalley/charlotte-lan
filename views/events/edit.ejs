<%- include('../partials/header.ejs') %>
<!-- Main Section -->
<div id="main" class="container-fluid d-flex justify-content-center">
    <%- include('../partials/alert.ejs') %>
	<div id="newEventContent">
		<!-- New Event Form -->
		<form action="/events/<%= event.id %>?_method=PUT" method="POST">
			<!-- Title -->
			<div class="form-group">
				<label class="text-white" for="title">Title</label>
				<input
					class="form-control"
					type="text"
					name="title"
					id="title"
					value="<%= event.title %>"
					required
				/>
			</div>

			<!-- Category -->
			<div class="form-group">
				<label class="text-white" for="category">Category</label>
				<select
					class="form-control"
					id="category"
					name="category"
					required
				>
                    
					<option value="CS:GO" <% if (event.category === 'CS:GO') { %> selected <% } %>>CS:GO</option>
					<option value="DOTA 2" <% if (event.category === 'DOTA 2') { %> selected <% } %>>DOTA 2</option>
					<option value="Valorant" <% if (event.category === 'Valorant') { %> selected <% } %>>Valorant</option>
					<option value="Fortnite" <% if (event.category === 'Fortnite') { %> selected <% } %>>Fortnite</option>
					<option value="Call of Duty: Modern Warfare 2" <% if (event.category === 'Call of Duty: Modern Warfare 2') { %> selected <% } %>>
						Call of Duty: MW2
					</option>
				</select>
			</div>

			<!-- Details -->
			<div class="form-group">
				<label class="text-white" for="details"> Details </label>
				<input
					class="form-control"
					type="text"
					name="details"
					id="details"
                    value="<%= event.details %>"
                    minlength="10"
					required
				/>
			</div>

			<!-- Location -->
			<div class="form-group">
				<label class="text-white" for="location"> Location </label>
				<input
					class="form-control"
					type="text"
					name="location"
					id="location"
                    value="<%= event.location %>"
					required
				/>
			</div>

			<!-- Start Time -->
			<div class="form-group">
				<label class="text-white" for="startTime">
					Start Time and Date
				</label>
				<input
					class="form-control"
					type="datetime"
					id="startTime"
					name="startTime"
                    value="<%= event.startTime %>"
					required
				/>
			</div>

			<!-- End Time -->
			<div class="form-group">
				<label class="text-white" for="endTime">
					End Time and Date
				</label>
				<input
					class="form-control"
					type="datetime"
					id="endTime"
					name="endTime"
                    value="<%= event.endTime %>"
					required
				/>
			</div>

			<!-- Image -->
			<div class="form-group">
				<label class="text-white" for="imagePath"> Image </label>
				<input
					class="form-control"
					type="file"
					id="imagePath"
					name="imagePath"
					accept="image/*"
					required
				/>
			</div>
			<div class="form-group">
				<button id="submitButton" type="submit" class="btn btn-success">
					Submit
				</button>
			</div>
		</form>
	</div>
</div>
<%- include('../partials/footer.ejs') %>
