<%- include('../partials/header.ejs') %>
<!-- Main Section -->
<div id="main" class="container-fluid d-flex justify-content-center">
	<div id="loginSignupContent">
		<%- include('../partials/alert.ejs') %>
		<!-- New Event Form -->
		<h1 class="text-white" align="center">Login</h1>
		<form action="/users/login" method="POST">
			<!-- Email -->
			<div class="form-group">
				<label class="text-white" for="Email"> Email </label>
				<input
					class="form-control"
					type="email"
					name="email"
					id="email"
					minlength="10"
					required
				/>
			</div>

			<!-- Password -->
			<div class="form-group">
				<label class="text-white" for="Password"> Password </label>
				<input
					class="form-control"
					type="password"
					name="password"
					id="password"
					minlength="8"
                    maxlength="64"
					required
				/>
			</div>

			<div class="form-group">
				<button id="submitButton" type="submit" class="btn btn-success">
					Submit
				</button>
			</div>
		</form>
	</div>
</div>
<%- include('../partials/footer.ejs') %>
